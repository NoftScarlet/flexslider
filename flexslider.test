  // Valid option set data
  $valid = array(
    'set1' => _flexslider_optionset_defaults(),
    'set2' => array(
      'animation' => 'fade',
      // @todo add more option tests
    ),
    'set3' => array(
      'animation' => 'slide',
    ),
  );
  
  // Invalid edge cases
  $error = array();
  
  return array('valid' => $valid, 'error' => $error);
